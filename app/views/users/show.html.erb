<div class="row">
  <div class="span12">
    <h1 class="page-header">My Profile</h1>
    <p id="notice"><%= notice %></p>
    <p>
      <b>Name:</b>
      <%= @user.name %>
    </p>

    <p>
      <b>Email:</b>
      <%= @user.email %>
    </p>



    <h2>Pledges</h2>
    <ul>
      <% @user.donations.each do |donation| %>
        <p><%= "$#{donation.value}:  #{donation.uniname}: #{donation.schoolname}" %></p>
      <% end %>



    </ul>
  </div>
</div>

<%= link_to 'Back', users_path %>
