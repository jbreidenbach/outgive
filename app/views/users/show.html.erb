<div class="row">
  <div class="span12">
    <h1 class="page-header">My Profile</h1>
    <p id="notice"><%= notice %></p>
    <p>
      <b>Name:</b>
      <%= @user.name %>
    </p>




    <h2>Pledges</h2>
    <ul>
      <% @user.donations.each do |donation| %>
        <p><%= "$#{donation.value}:  #{donation.uniname}: #{donation.schoolname}" %>
        <%= link_to image_tag('pencil.png', size: '20x20'), edit_donation_path(donation) %>
        <%= link_to image_tag('trash-can-icon.jpg', size: '25x25'), donation, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <% end %>


    </ul>
  </div>
</div>

<%= link_to_function "Back", "history.back()" %>
